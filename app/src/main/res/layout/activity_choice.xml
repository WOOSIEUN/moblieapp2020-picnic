<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ChoiceActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/searchFestival"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/location"
            android:layout_weight="1"
            android:backgroundTint="#2196F3"
            android:fontFamily="@font/recipekorea"
            android:onClick="Festival"
            android:text="축제"
            android:textSize="17sp" />

        <Button
            android:id="@+id/searchTour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/searchFestival"
            android:layout_weight="1"
            android:backgroundTint="#00BCD4"
            android:fontFamily="@font/recipekorea"
            android:onClick="Tour"
            android:text="관광지"
            android:textSize="17sp" />

        <Button
            android:id="@+id/searchHeritage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/searchTour"
            android:layout_weight="1"
            android:backgroundTint="#0ADCC8"
            android:fontFamily="@font/recipekorea"
            android:onClick="Heritage"
            android:text="문화재"
            android:textSize="17sp" />
    </LinearLayout>

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>