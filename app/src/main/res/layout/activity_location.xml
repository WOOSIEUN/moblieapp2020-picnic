<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LocationActivity">

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/map"
        android:name="com.naver.maps.map.MapFragment" />

    <com.naver.maps.map.widget.LocationButtonView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"/>

    <Button
        android:id="@+id/searchFestival"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="축제 검색하기"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/location"
        android:onClick="searchFestival"/>

    <Button
        android:id="@+id/searchTour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="관광지 검색하기"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/searchFestival"
        android:onClick="searchTour"/>

    <Button
        android:id="@+id/searchHeritage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="문화재 검색하기"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/searchTour"
        android:onClick="searchHeritage"/>

</RelativeLayout>