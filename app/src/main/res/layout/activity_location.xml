<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/map"
        android:name="com.naver.maps.map.MapFragment" />

    <com.naver.maps.map.widget.LocationButtonView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"/>

    <Button
        android:id="@+id/searchFestival"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/location"
        android:backgroundTint="#2196F3"
        android:fontFamily="@font/recipekorea"
        android:textSize="12sp"
        android:onClick="searchFestival"
        android:text="축제 검색하기" />

    <Button
        android:id="@+id/searchTour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/searchFestival"
        android:backgroundTint="#00BCD4"
        android:fontFamily="@font/recipekorea"
        android:textSize="12sp"
        android:onClick="searchTour"
        android:text="관광지 검색하기" />

    <Button
        android:id="@+id/searchHeritage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/searchTour"
        android:backgroundTint="#0ADCC8"
        android:fontFamily="@font/recipekorea"
        android:textSize="12sp"
        android:onClick="searchHeritage"
        android:text="문화재 검색하기" />

</RelativeLayout>